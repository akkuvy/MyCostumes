<div class="container">
  <a href="/admin/add-product" class="btn btn-success ml-5 mt-5 ">ADD PRODUCT</a>


  <table class="table  mt-5 ">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col">Off</th>
        <th scope="col">Description</th>
        <th scope="col">Image</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>

        <td>*</td>
        <td>{{this.name}}</td>
        <td>{{this.category}}</td>
        <td>{{this.price}}</td>
        <td>{{this.OFF}}</td>
        <td>{{this.description}}</td>
        <td> <img style="height: 8em; width:7em" src="/product-images/{{this._id}}.jpeg"></td>
        <td><a href="admin/edit-products/{{this._id}}" class="btn btn-success">EDIT</a>
          <a href="admin/delete-products/{{this._id}}" class="btn btn-danger">DELETE</a></td>
        {{/each}}

      </tr>
    </tbody>
  </table>


</div>