<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">



                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1"><img
                                src="/product-images/{{products._id}}.jpeg" /></div>

                    </div>


                </div>
                <div class="details col-md-6 mt-5">
                    <h3 class="product-title">{{products.name}}</h3>

                    <h4 class="product-description">{{products.description}}</h4>
                    <h4 class="price">current price: <span>â‚¹{{products.price}}</span></h4>
                    <div class="action">
                        <a class="btn btn-success" onclick="addtoCart('{{products._id}}')">ADD TO CART</a>
                        <button class="like btn btn-default ml-5  mt-5" type="button"><span class="fa fa-heart"></span></button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>

    function addtoCart(proId) {
  $.ajax({
    url: "/addto-cart/" + proId,
    method: "get",
    success: (response) => {
      let count = $("#cart-count").html();
      if (response.status) {
        count = parseInt(count) + 1;
        $("#cart-count").html(count);

        alert("Item added successfully");
      }
    },
  });
}

</script>