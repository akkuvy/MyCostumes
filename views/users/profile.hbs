

<div class="container">
	<div class="row">
		
      
		<div class="col-md-9">
		    <div class="card">
		        <div class="card-body">
		            <div class="row">
		                <div class="col-md-12">
		                    <h4>Your Profile</h4>
		                    <hr>
		                </div>
		            </div>
		            <div class="row">
		                <div class="col-md-12">
                            
		                    <form action="/profile" method="POST">
                              <div class="form-group row">
                                <label for="username" class="col-4 col-form-label">User Name</label> 
                                <div class="col-8">
                                  <input id="username" name="username" placeholder="Username" class="form-control here" required="required" type="text" value="{{profile.username}}">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label for="name" class="col-4 col-form-label" >Mobile</label> 
                                <div class="col-8">
                                  <input id="name" name="mobile" placeholder="First Name" class="form-control here" type="text" value="{{profile.mobile}}">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label for="lastname" class="col-4 col-form-label">Email</label> 
                                <div class="col-8">
                                  <input id="lastname" name="email" placeholder="Last Name" class="form-control here" type="text" value="{{profile.email}}">
                                </div>
                              </div>
                              
                              <div class="form-group row">
                                <div class="offset-4 col-8">
                                  <button  type="submit" class="btn btn-primary">Update My Profile</button>
                                </div>
                              </div>
                            </form>
                            <div  class="mt-5" style="padding-left: 50%;"><a class="btn btn-success" href="/manage-address">Manage Address</a></div>
                            
		                </div>
		            </div>
		            
		        </div>
		    </div>
		</div>
	</div>
</div>